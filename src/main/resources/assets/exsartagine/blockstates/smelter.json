{
  "multipart": [
    {   "when": { "facing": "north" },
      "apply": { "model": "exsartagine:smelter","y": 0 }
    },
    {   "when": { "facing": "east" },
      "apply": { "model": "exsartagine:smelter","y": 90 }
    },
    {   "when": { "facing": "south" },
      "apply": { "model": "exsartagine:smelter","y": 180 }
    },
    {   "when": { "facing": "west" },
      "apply": { "model": "exsartagine:smelter","y": 270 }
    },
    {   "when": { "legs": "true" },
      "apply": { "model": "exsartagine:legs"}
    },
    {   "when": { "full": "true" },
      "apply": { "model": "exsartagine:lava"}
    }
  ]
}