{
    "multipart": [
        {   "when": { "facing": "north" },
            "apply": { "model": "exsartagine:wok","y": 0 }
        },
        {   "when": { "facing": "east" },
            "apply": { "model": "exsartagine:wok","y": 90 }
        },
        {   "when": { "facing": "south" },
            "apply": { "model": "exsartagine:wok","y": 180 }
        },
        {   "when": { "facing": "west" },
            "apply": { "model": "exsartagine:wok","y": 270 }
        },
        {   "when": { "legs": "true" },
            "apply": { "model": "exsartagine:legs"}
        }
    ]
}